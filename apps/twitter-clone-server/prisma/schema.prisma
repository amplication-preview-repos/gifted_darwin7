datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  author    String?
  comments  Comment[]
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  likes     Like[]
  updatedAt DateTime  @updatedAt
}

model Comment {
  author    String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
}

model Like {
  author    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
